{
  "dashboard": {
    "title": "JobBoard Monitoring",
    "description": "Comprehensive monitoring dashboard for JobBoard application",
    "tags": ["jobboard", "prometheus", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Services Health",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [{
          "expr": "up",
          "legendFormat": "{{job}}",
          "instant": true
        }],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"type": "value", "value": 0, "text": "DOWN"},
              {"type": "value", "value": 1, "text": "UP"}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Container CPU Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [{
          "expr": "rate(container_cpu_usage_seconds_total[5m]) * 100",
          "legendFormat": "{{container_name}}"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 3,
        "title": "Container Memory Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [{
          "expr": "container_memory_usage_bytes / 1024 / 1024",
          "legendFormat": "{{container_name}}"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "decimals": 2
          }
        }
      },
      {
        "id": 4,
        "title": "Prometheus HTTP Requests",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [{
          "expr": "rate(prometheus_http_requests_total[5m])",
          "legendFormat": "{{code}} {{handler}}"
        }]
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "10s"
  },
  "overwrite": true
}